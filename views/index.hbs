<a href="/add"><div class="btn btn-lg btn-success">Add Product</div></a>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div id="success" class="alert alert-success" {{#if noMessages}} hidden {{/if}}>
            {{successMsg}}
        </div>
    </div>
</div>
<div class="well" id="searchDiv">
<span style="color:purple">
<h3 align="center">{{content}}</h3></span></div>

<!--loop through all products-->
<div class="container">
{{# each products }}

<div class="row" >
    {{#each this}}
  <div class="col-sm-6 col-md-4" >
    
    <div  class="thumbnail" id="product-menu">
      <img src="{{this.url}}" id="images" alt="No picture available">
        
        <a href="/checkout">Quick View</a>
      <div class="caption">
         
              <div class="title">
                   <span style="text-transform: none;">
        <h5>{{this.title}}</h5></span></div>
       <!-- <p class="description">..........</p>-->
          <div class="clearfix">
              <p><span style="font-weight: 700;">Rs.{{this.price}}</span></p>
              <a href="/wish-list/{{this.title}}" class=" pull-right">
                  <button type="submit" class="btn btn-inverse btn-circle btn-lg" name="addToWish" id="addToWish" value="">
                      <i class="glyphicon glyphicon-heart"></i></button></a>
                      <!--onclick="wishListCounter('{{this._id}}')"-->
                    <!--  <i class="glyphicon glyphicon-heart"></i>--><!--<i class="fa fa-gratipay fa-2x" aria-hidden="true"></i>-->
             <a href="/add-to-cart/{{this.title}}" class="btn btn-success btn-circle btn-lg pull-left"  role="button"><i class="fa fa-shopping-cart pull-left" aria-hidden="true"></i></a>
      </div>
          </div>
    </div>
       
  </div>
    
    {{/each}}
</div>
    
{{/each}}
</div>
